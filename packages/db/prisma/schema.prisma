datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

generator dbml {
  provider            = "prisma-dbml-generator"
  output              = "../../../docs"
  outputName          = "schema.dbml"
  projectName         = "Taske"
  projectDatabaseType = "cockroachdb"
}

