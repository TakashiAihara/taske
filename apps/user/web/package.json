{
	"name": "@user/web",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"analyze": "pnpm analyze:check",
		"analyze:check": "biome check --verbose --log-level=debug",
		"analyze:check:ci": "pnpm analyze:check --log-level=debug --reporter=github",
		"analyze:check:staged": "pnpm analyze:check --staged --no-errors-on-unmatched",
		"analyze:check:unsafe": "pnpm analyze:check --unsafe",
		"analyze:write": "biome check --write",
		"build": "next build",
		"build:swc": "nest --builder swc build",
		"build:type": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && fix-esm-import-path dist",
		"format": "pnpm format:write && pnpm format:packages",
		"format:check": "biome format",
		"format:packages": "sort-package-json",
		"format:write": "biome format --write",
		"lint:check": "biome lint",
		"lint:write": "biome lint --write",
		"start:dev": "next dev --turbo",
		"start:preview": "next build && next start",
		"start:prod": "next start",
		"test": "pnpm test:base",
		"test:all": "pnpm test:unit && pnpm test:integration",
		"test:base": "vitest",
		"test:benchmark": "pnpm test:base --mode benchmark",
		"test:cov": "pnpm test:base --coverage",
		"test:debug": "pnpm test:base --inspect-brk --no-file-parallelism",
		"test:debug:single-fork": "pnpm test:base --inspect-brk --pool forks --poolOptions.forks.singleFork",
		"test:debug:single-thread": "pnpm test:base --inspect-brk --pool threads --poolOptions.threads.singleThread",
		"test:integration": "pnpm test:base -c vitest.config.integration.ts",
		"test:snapshot:update": "pnpm test:base --update --ui",
		"test:unit": "pnpm test:base",
		"test:watch": "pnpm test:base --watch",
		"type:check": "tsc --noEmit"
	},
	"dependencies": {
		"@packages/db": "workspace:",
		"@packages/env": "workspace:",
		"@packages/shared-schemas": "workspace:",
		"@packages/shared-types": "workspace:",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tanstack/react-query": "^5.68.0",
		"@trpc/client": "^11.0.0-rc.446",
		"@trpc/react-query": "^11.0.0-rc.446",
		"@trpc/server": "^11.0.0-rc.446",
		"geist": "^1.3.1",
		"next": "^15.2.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"server-only": "^0.0.1",
		"superjson": "^2.2.2",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@tailwindcss/cli": "^4.0.14",
		"@tailwindcss/postcss": "^4.0.14",
		"@tooling/biome": "workspace:",
		"@tooling/tsconfig": "workspace:",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.13.10",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@typescript-eslint/eslint-plugin": "^8.26.1",
		"@typescript-eslint/parser": "^8.26.1",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.22.0",
		"eslint-config-next": "^15.2.2",
		"fix-esm-import-path": "catalog:",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sort-package-json": "catalog:",
		"tailwindcss": "^4.0.14",
		"tsc-alias": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.6.3",
	"engines": {
		"node": ">=22.14.0",
		"npm": "DO NOT USE NPM",
		"pnpm": "10.6.3",
		"yarn": "DO NOT USE YARN"
	},
	"ct3aMetadata": {
		"initVersion": "7.38.1"
	}
}
